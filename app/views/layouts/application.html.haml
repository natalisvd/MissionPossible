!!!
%html
  %head
    %title MissionPossible
    = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags
  %body
    - if current_user
      %nav.navbar.navbar-default
        .container-fluid
          .navbar-header
            .navbar-text
              = link_to "Mission Possible", root_path
          .navbar-btn
            = link_to 'Log out', destroy_user_session_path, method: 'delete', class: 'pull-right btn btn-default'
    = yield