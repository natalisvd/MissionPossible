.modal.member.fade
  .modal-dialog
    .modal-content
      .modal-header
        %button.close{"aria-label" => "Close", "data-dismiss" => "modal", :type => "button"}
          %span{"aria-hidden" => "true"} &times;
        %h4.modal-title Add member to project
      .modal-body
        %input{type: :email}
        %input{type: :hidden, :class => 'project_id', "data-id"=>  project.id}
      .modal-footer
        %button.btn.btn-default{"data-dismiss" => "modal", :type => "button"} Close
        %button.btn.btn-primary.confirm_member{:type => "button", data_project: params[:project_id]} Save changes
    / /.modal-content
  / /.modal-dialog
/ /.modal